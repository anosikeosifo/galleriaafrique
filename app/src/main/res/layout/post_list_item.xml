<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/padding_small"
    android:layout_marginBottom="@dimen/padding_small"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="0dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:orientation="vertical"
        android:padding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="@dimen/padding_medium"
            android:paddingTop="@dimen/padding_medium">

            <ImageView
                android:id="@+id/post_user_avatar"
                android:layout_width="@dimen/avatar_small"
                android:layout_height="@dimen/avatar_small"
                android:padding="@dimen/padding_medium"
                android:src="@drawable/ic_avatar" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_medium">


                <TextView
                    android:id="@+id/post_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="user info"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="0dp">

                    <TextView
                        android:id="@+id/post_created_at"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/list_item_user"
                        android:layout_alignParentRight="true"
                        android:text="12 min ago"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@android:color/secondary_text_light"
                        android:textSize="@dimen/text_extra_small" />

                    <TextView
                        android:id="@+id/middot_separator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:padding="@dimen/padding_small"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/text_extra_small" />

                    <TextView
                        android:id="@+id/post_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/list_item_user"
                        android:layout_alignParentRight="true"
                        android:text="Lagos, Nigeria"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@android:color/secondary_text_light"
                        android:textSize="@dimen/text_extra_small" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingLeft="0dp"
            android:paddingRight="0dp">

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/padding_medium"
                android:layout_marginRight="@dimen/padding_medium"
                android:background="#ccc" />

            <TextView
                android:id="@+id/post_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="@dimen/padding_medium"
                android:autoLink="web"
                android:focusable="false"
                android:linksClickable="true"
                android:text="Light up!. Windhoek, Namibia.\n http://galleriafrique.com/photos/8-some-places-are-beyond-description"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="@dimen/text_small" />

            <ImageView
                android:id="@+id/post_photo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/post_image_height"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder_photo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal"
            android:padding="@dimen/padding_medium">

            <ImageButton
                android:id="@+id/favorite_post"
                style="@style/feed_icons_style"
                android:src="@drawable/ic_favorite" />

            <TextView
                android:id="@+id/favorite_count"
                style="@style/feed_icons_stats_style" />

            <ImageButton
                android:id="@+id/share_post"
                style="@style/feed_icons_style"
                android:src="@drawable/ic_share" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
