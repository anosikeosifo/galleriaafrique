<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <LinearLayout
        android:id="@+id/user_profile_header_container"
        android:layout_height="@dimen/user_profile_header_height"
        android:layout_width="match_parent"
        android:background="@android:color/holo_red_light"
        android:padding="@dimen/padding_large"
        android:orientation="horizontal">

        <LinearLayout android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="32">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_profile_info_container"
            android:layout_width="wrap_content"
            android:layout_weight="0"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/user_profile_image"
                android:layout_width="@dimen/profile_image_height"
                android:layout_height="@dimen/profile_image_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/padding_xlarge"
                android:src="@drawable/ic_avatar"/>

            <LinearLayout
                android:layout_alignBottom="@+id/user_profile_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_profile_name"
                    style="@style/user_profile_header_style"
                    android:text="Anosike Osifo" />

                <TextView
                    android:id="@+id/middot_separator"
                    android:padding="@dimen/padding_medium"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_extra_small"/>

                <TextView
                    android:id="@+id/user_profile_country"
                    style="@style/user_profile_header_style"
                    android:text="NG" />

            </LinearLayout>

            <TextView android:id="@+id/user_profile_phrase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I love what i do! Its fun!"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/padding_medium"/>
        </LinearLayout>

        <RelativeLayout android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="32">

            <ImageButton
                android:id="@+id/profile_edit_button"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_edit"
                android:layout_gravity="top"
                android:padding="0dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="@android:color/transparent"/>
        </RelativeLayout>

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/user_profile_pager"
        android:layout_height="match_parent"
        android:layout_width="match_parent">



    </android.support.v4.view.ViewPager>

</LinearLayout>